{
  "version": 3,
  "configurePresets": [
    {
      "name": "clang-debug",
      "displayName": "Clang Debug",
      "description": "Use Clang compiler with Debug build type",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "CC": "D:/Apps/msys64/clang64/bin/clang.exe",
        "CXX": "D:/Apps/msys64/clang64/bin/clang++.exe"
      }
    },
    {
      "name": "Ninja (default)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}